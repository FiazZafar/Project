<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addToCartList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/addtoCartImg"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/item_img2"
                    android:layout_margin="15dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp"
                    >
                    <TextView
                        android:id="@+id/itemNameAddTocart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name:"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        />

                    <TextView
                        android:id="@+id/itemPriceAddtocart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price:"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="2dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="end|center_vertical"
                    android:paddingEnd="30dp"
                    >

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/minusBtnAddToCart"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_below="@+id/item_img"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/plus_minus_bg_shape"
                        android:text="-"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/item_quantityAddtoCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_below="@id/item_img"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_alignParentEnd="true" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/plusBtnAddToCart"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_below="@+id/item_img"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/plus_minus_bg_shape"
                        android:text="+"
                        android:textStyle="bold"
                        />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>